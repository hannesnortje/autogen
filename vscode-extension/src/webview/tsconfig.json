{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
